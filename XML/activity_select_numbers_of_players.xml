<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".selectNumbersOfPlayers">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE NUMBER OF PLAYERS"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="152dp"
        android:layout_height="156dp"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="goToSinglePlayerPage"
        android:text="Single Player" />

    <Button
        android:id="@+id/twoPlayers"
        android:layout_width="152dp"
        android:layout_height="156dp"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="goToTwoPlayersPage"
        android:text="Two Players" />

    <Button
        android:id="@+id/threePlayers"
        android:layout_width="152dp"
        android:layout_height="156dp"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="goToThreePlayersPage"
        android:text="Three Players" />

    <Button
        android:id="@+id/fourPlayers"
        android:layout_width="152dp"
        android:layout_height="156dp"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="goToFourPlayersPage"
        android:text="Four Players" />

    </GridLayout>



</LinearLayout>
