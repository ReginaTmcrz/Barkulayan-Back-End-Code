<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".FourPlayersBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_updated">
        </ImageView>

        <TextView
            android:id="@+id/round_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mariofont"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="55dp"
            android:text="0" />

    </RelativeLayout>
    <TextView
        android:id="@+id/random_color_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/mariofont"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="Winning Color " />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/emptycolorboard">
        </ImageView>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/redBtn"
                android:layout_width="78dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="23dp"
                android:background="@drawable/redmariobutton"
                android:contentDescription="Red"
                android:onClick="onColorButtonClick"
                android:text="Red" />

            <ImageButton
                android:id="@+id/blueBtn"
                android:contentDescription="Blue"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="onColorButtonClick"
                android:background="@drawable/blueghostbutton"
                android:text="Blue" />


            <ImageButton
                android:id="@+id/yellowBtn"
                android:contentDescription="Green"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/greenluigibutton"
                android:onClick="onColorButtonClick"
                android:text="Green" />

            <ImageButton
                android:id="@+id/greenBtn"
                android:contentDescription="Yellow"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:onClick="onColorButtonClick"
                android:background="@drawable/yellowstarbutton"
                android:text="Yellow" />

            <ImageButton
                android:id="@+id/pinkBtn"
                android:contentDescription="Pink"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="32dp"
                android:onClick="onColorButtonClick"
                android:layout_marginTop="5dp"
                android:background="@drawable/pinkshellbutton"
                android:text="Pink" />

            <ImageButton
                android:id="@+id/orangeBtn"
                android:contentDescription="Orange"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="32dp"
                android:onClick="onColorButtonClick"
                android:background="@drawable/orangemushroombutton"
                android:text="Orange" />

        </GridLayout>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/plname">
            </ImageView>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:background="@drawable/plname">
            </ImageView>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:background="@drawable/plname">
            </ImageView>


            <ImageView
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:background="@drawable/plname">

            </ImageView>

            <ImageView
                android:layout_width="139dp"
                android:layout_height="55dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/plname">
            </ImageView>

            <ImageView
                android:layout_width="139dp"
                android:layout_height="55dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/plname">
            </ImageView>

            <ImageView
                android:layout_width="139dp"
                android:layout_height="55dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/plname">
            </ImageView>

            <ImageView
                android:layout_width="139dp"
                android:layout_height="55dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/plname">
            </ImageView>

        </GridLayout>



        <TextView
            android:id="@+id/username_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="username"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="67dp"
            android:text="username"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username_text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="122dp"
            android:text="username"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username_text_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="177dp"
            android:fontFamily="@font/mariofont"
            android:text="username"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/selectedColorsTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"/>

        <TextView
            android:id="@+id/selectedColorsTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="67dp"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"/>

        <TextView
            android:id="@+id/selectedColorsTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="122dp"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"/>

        <TextView
            android:id="@+id/selectedColorsTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="177dp"
            android:textColor="@color/white"
            android:fontFamily="@font/mariofont"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/betBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/betbutton"
        android:contentDescription="usenrmae"
        android:enabled="false"
        android:text="Bet" />

</LinearLayout>